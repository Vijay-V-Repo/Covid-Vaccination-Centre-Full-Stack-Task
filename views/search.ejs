<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>Vaccination Centres</title>
</head>
<body>
  <h1>Search Vaccination Centres</h1>
  <form action="/centres/search" method="GET">
    <input type="text" name="q" placeholder="Search by Centre Name or Working Hours" size="5" required><br>
    <br><button type="submit">Search</button>
  </form>
  <h2>Search Results</h2>
  <% if (centres.length > 0) { %>
      <% centres.forEach(centre => { %>
          <hr>
          <strong>Name:</strong> <%= centre.name %><br>
          <strong>Working Hours:</strong> <%= centre.workingHours %><br>
          <strong>Capacity:</strong> <%= centre.capacity %><br>
          <strong>Available Slots:</strong> <%= centre.availableSlots ? 'Yes' : 'No' %><br><br>
          <% if (centre.availableSlots) { %>
            <form action="/centres/<%= centre._id %>/book" method="POST">
              <button type="submit">Book Slot</button>
            </form>
            <hr>
          <% } else { %>
            <p>No available slots</p>
          <% } %>
      <% }) %>
    <br>
  <% } else { %>
    <p>No vaccination centres found</p>
  <% } %>
</body>
</html>
